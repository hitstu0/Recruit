/*******导航*****/
/********要改的开始*********/
.nav{
  background-color: #fff;
  margin-top: 7px;
  box-shadow: 0px 0px 3px rgba(55,55,55,0.5);
  width:100%;
  height:400rpx;
  padding: 0px;
}
.nav-up{
  margin: 0px;
  padding: 0px;
  width:100%;
  height:190rpx;
}
.nav-down{
  margin: 0px;
  padding: 0px;
  width:100%;
  height:190rpx;
}
.nav-all{
  overflow: hidden;
  float:left;
  height:100%;
  width:25%;
}

.nav-all-img{
  width:100%;
  height:180rpx;
}
.nav-all-img image{
  width: 110rpx;
  height:110rpx;
  border-radius: 55rpx;
  margin-top: 25rpx;
  margin-left: 42rpx;
}
.nav-one-up-img image{
  background-color: #f96;
}
.nav-tow-up-img image{
  background-color: #39f;
}
.nav-three-up-img image{
  background-color: #9f3;
}
.nav-four-up-img image{
  background-color: #f69;
}
.nav-one-down-img image{
  background-color: #6c3;
}
.nav-tow-down-img image{
  background-color: #96f;
}
.nav-three-down-img image{
  background-color: #fc3;
}
.nav-four-down-img image{
  background-color: #6cf;
}
.nav-text{
  color: #000;
  font-size: 13px;
   padding: 0px;
  margin-top:-30rpx;
  text-align: center;
  width:100%;
  height:40rpx;
}
/********招聘公司列表*********/ 
