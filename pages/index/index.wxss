  font-size:15px;
  font-weight:700;
}
.list-text-entnum{
  float: right;
  width:30%;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 14px;
  text-align:right;
  color:#888;
}
.list-text-detpay{
  height: 21px;
  float: left;
  padding-left: 8px;
  padding-right: 8px;
  width: 97%;
}
.list-text-detpay-one{
  float: right;
  height: 100%;
  width: 60%;
