/* pages/index/detail.wxss */
.detail{
  width:100%;
  height: 100%;
  padding: 0px;
  margin: 0px;
}
.det-image{
  width:100%;
  height:360rpx;
}
.det-image image{
  width:100%;
  height:100%;  
}
.det-list{
  height: 240rpx;
  width: 100%;
}
.det-list-one{
  width:95%;
  margin-left:auto;
  margin-right:auto;
  margin-top:5px;
  font-size:18px;
  font-weight:700;
  }
.det-list-tow{
  width:95%;
  height:80rpx;
  line-height:80rpx;
  margin-left:auto;
  margin-right:auto;
  }
.det-list-tow-one{
  text-align:left;
  color:red;
  float:left;
  height:80rpx;
  line-height:80rpx;
  font-weight:600;
  width:50%;
}
.det-list-tow-tow{
  text-align:right;
  color:#888;
  float:right;
  height:80rpx;
  line-height:80rpx;
  font-size:12px;
  width:50%;
}
.det-list-three{
  text-align:left;
  width:95%;
  margin-left:auto;
  margin-right:auto;
  color:#888;
  font-size:12px;
}
.det-money view{
  line-height: 80rpx;
  height:80rpx;
  width:95%;
  margin-left: auto;
  margin-right: auto;
}
.det-money{
  box-shadow: 0px 0px 3px rgba(55,55,55,0.5);
  margin-top: 8rpx;
  height:80rpx;
  width:100%;
}
.det-money-list{
  padding-bottom: 8px;
  margin-top: 8px;
  width:90%;
  margin-left: auto;
  margin-right: auto;
  font-size: 12px;
}
.det-money-list-text{
  padding-bottom: 48px;
}
.det-nav ul li{
  font-size: 12px;
  color:#fff;
  text-align: center;
  float: left;
  width:25%;
  height: 40px;
  text-decoration: none;
  list-style-type: none;
  line-height: 40px;
}
.det-nav{
  width: 100%;
  height:40px;
  position: fixed;
  left: 0;
  bottom: 0;
}
/* 微信咨询 */
.conbtn{
color:white;
font-size:13px;
background-color:#3bae56;
line-height: 40px;
}
button::after{
border: none;
}

