}
.list-text-name{
  height: 45rpx;
  line-height: 45rpx;
  width:93%;
  padding-left:8px;
  margin-top:7px;
}
.list-text-name-one{
  text-align: left;
  float: left;
  height: 45rpx;
  line-height: 45rpx;
  width:70%;
