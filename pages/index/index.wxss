  line-height: 21px;
}
.list-text-adder{
  height: 100%;
  float: left;
  width: 35%;
  text-align:left;
  color:#888;
  font-size:14px;
  line-height: 21px;
}
.list-text-time{
  padding-left: 8px;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 14px;
  float: left;
  width:95%;
  margin-left: auto;
  margin-right: auto;
  text-align:left;
  color:#888;
}
/*轮播图*/
swiper {
    height: 500rpx;
}
swiper-item image {
    width: 100%;
    height: 100%;
}
.swiper-container{
  position: relative;
}
.swiper-container .swiper{
  height: 380rpx;
}
.swiper-container .swiper .img{
  width: 100%;
  height: 100%;
}
.loading{
  width: 100%;
  height: 30px;
  text-align: center;
  line-height: 30px;
  color: #888;
  font-size: 15px;
  border-top: 1px #F7F7F7 solid;
  border-bottom: 1px #F7F7F7 solid;
}
/*滚动tab*/
.tab-h{
    height: 80rpx;width: 100%; box-sizing: border-box;margin-left: auto;margin-right: auto;margin-top: 0;
    line-height: 80rpx;background: #fff; font-size: 16px; white-space: nowrap;top:0; left: 0; z-index: 99;}
.tab-item{margin:0;display: inline-block;width: 25%;text-align: center;}
.tab-item.active{position: relative;background: #fc3;}
.tab-content{margin-top: 3rpx;height:1000rpx;}
.scoll-h{height: 100%;margin: 0;}

.conbtn{
background-color:#fff;
} 
button::after{
border: none;
}

